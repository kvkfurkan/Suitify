<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/suitify_dark_bg"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suitify"
                android:textColor="@color/suitify_text_primary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/helvatica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profesyonel vesikalÄ±k fotoÄŸrafÄ±nÄ±zÄ± oluÅŸturun"
                android:textColor="@color/suitify_text_secondary"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Main Feature Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:cardBackgroundColor="@color/suitify_surface"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            android:layout_marginHorizontal="1dp"
            app:strokeColor="@color/suitify_border"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <!-- AI Icon/Image -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/suitify_card"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/mainImageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/suit_logo"
                        android:scaleType="centerInside"
                        android:contentDescription="Suitify Logo" />

                </androidx.cardview.widget.CardView>

                <!-- Title and Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let's Suit Up"
                    android:textColor="@color/suitify_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/helvatica"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FotoÄŸrafÄ±nÄ±zÄ± yÃ¼kleyin ve yapay zeka ile profesyonel takÄ±m elbiseli vesikalÄ±k haline getirin"
                    android:textColor="@color/suitify_text_secondary"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Gallery Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/suitify_primary"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/btnPickGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ“·  Galeriden FotoÄŸraf SeÃ§"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/helvatica"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!-- Camera Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="@color/suitify_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="1dp"
                app:strokeColor="@color/suitify_border">

                <Button
                    android:id="@+id/btnOpenCamera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ“¸  Kamera ile Ã‡ek"
                    android:textColor="@color/suitify_text_primary"
                    android:textSize="16sp"
                    android:fontFamily="@font/helvatica"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Continue Card (Initially Hidden) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/continueCardView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/suitify_primary"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="âœ¨  Devam Et"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/helvatica"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>